<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuPage"
        android:background="@drawable/mainbackground">

    <Button
            android:layout_width="322dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="492dp"
            tools:ignore="SpeakableTextPresentCheck" android:text="Start"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/gameboy" android:layout_alignParentBottom="true"
            android:id="@+id/button3" android:backgroundTint="@color/consoleGreen"/>
    <Button
            android:layout_width="320dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="416dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:text="Instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/gameboy"
            android:layout_alignParentBottom="true"
            android:id="@+id/button4" android:backgroundTint="@color/consoleGreen"/>

</androidx.constraintlayout.widget.ConstraintLayout>