<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/mainbackground">


    <!--Description of event -->

    <!--Question for event -->

    <TextView
            android:layout_width="325dp"
            android:layout_height="174dp" android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="396dp"
            android:gravity="left"
            android:fontFamily="@font/gameboy"
            android:text="Description"
            android:layout_marginEnd="24dp"/>
    <TextView
            android:layout_width="325dp"
            android:layout_height="73dp" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="left"
            android:fontFamily="@font/gameboy"
            android:text="Question"
            app:layout_constraintHorizontal_bias="0.647" app:layout_constraintVertical_bias="0.383"/>
    <Button
            android:text="Yes"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="228dp"
            android:layout_marginBottom="216dp"
            android:fontFamily="@font/inconsolata_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:backgroundTint="@color/retroRed"
            android:background="@drawable/rounded_corner"/>
    <Button
            android:text="No"
            android:layout_width="53dp"
            android:layout_height="53dp" android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="46dp" android:layout_marginBottom="244dp"
            android:fontFamily="@font/inconsolata_bold" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:backgroundTint="@color/retroRed"
            android:background="@drawable/rounded_corner"/>


</androidx.constraintlayout.widget.ConstraintLayout>

